{
  "scripts": {
    "start": "abby server watchify build:* -- --watch",
    "server": "live-server . --entry-file=release/index.html",
    "watchify": "watchify src --transform babelify --debug --verbose --outfile release/index.js",
    "build": "abby browserify build:*",
    "browserify": "browserify src --transform babelify --debug --verbose --outfile release/index.js",
    "build:pug": "pug src --out release --pretty --basedir src",
    "build:styl": "stylus --use kouto-swiss src/index.styl --out release/index.css --sourcemap"
  },
  "abigail": {
    "plugins": {
      "parse": "parallel"
    }
  },
  "devDependencies": {
    "abigail": "^1.7.1",
    "babel-cli": "^6.9.0",
    "babel-eslint": "^6.0.4",
    "babel-plugin-transform-bluebird": "^0.1.1",
    "babel-plugin-transform-object-assign": "^6.8.0",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-stage-1": "^6.5.0",
    "babel-register": "^6.9.0",
    "babelify": "^7.3.0",
    "bluebird": "^3.4.0",
    "eslint": "^2.11.1",
    "eslint-config-import": "^0.13.0",
    "eslint-config-standard": "^5.3.1",
    "eslint-plugin-import": "^1.8.1",
    "eslint-plugin-promise": "^1.3.2",
    "eslint-plugin-standard": "^1.3.2",
    "kouto-swiss": "^0.12.0",
    "live-server": "^1.0.0",
    "pug-cli": "^1.0.0-alpha6",
    "sanitize.css": "^3.3.0",
    "stylus": "^0.54.5"
  }
}
