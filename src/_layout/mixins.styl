writing-mode(mode=vertical-rl)
  -webkit-writing-mode mode
  -moz-writing-mode mode
  -o-writing-mode mode
  writing-mode mode

  -ms-writing-mode mode
  if mode is vertical-rl
    -ms-writing-mode tb-rl
  else
    -ms-writing-mode lr-tb

  text-align justify
  text-justify inter-ideograph

  line-height 1.5

vh-font-xs()
  font-size 1.5vh
vh-font-sm()
  font-size 2.5vh
vh-font-md()
  font-size 3vh
vh-font-lg()
  font-size 5vh
vh-font-xl()
  font-size 8vh

// block mixins (see http://stylus-lang.com/docs/mixins.html#block-mixins)
// quote by https://material.angularjs.org/latest/layout/container
media-portrait()
  @media (orientation portrait)
    {block}
media-landscape()
  @media (orientation landscape)
    {block}
media-xs()
  @media (max-width 600px - 1px)
    {block}
media-sm()
  @media (min-width 600px) and (max-width 960px - 1px)
    {block}
media-md()
  @media (min-width 960px) and (max-width 1280px - 1px)
    {block}
media-lg()
  @media (min-width 1280px) and (max-width 1920px - 1px)
    {block}
media-xl()
  @media (min-width 1920px)
    {block}
media-gt-xs()
  @media (min-width 600px)
    {block}
media-gt-sm()
  @media (min-width 960px)
    {block}
media-gt-md()
  @media (min-width 1280px)
    {block}
media-gt-lg()
  @media (min-width 1920px)
    {block}

// see http://stackoverflow.com/questions/3839809/detect-iphone-ipad-purely-by-css
is-ios()
  @media screen and (max-device-width: 480px)
    {block}

not-ios()
  @media screen and (min-device-width: 481px)
    {block}
